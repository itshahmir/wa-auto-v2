# WhatsApp Automation Docker Configuration
# שנה את הדומיין שלך כאן:
DOMAIN=whatsapp.social-crm.co.il
# או: DOMAIN=yourdomain.com

# Production Settings
NODE_ENV=production
HEADLESS=true

# Instance Configuration
INSTANCE_1_PORT=3001
INSTANCE_2_PORT=3002
INSTANCE_3_PORT=3003
INSTANCE_4_PORT=3004
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# User Distribution
INSTANCE_1_USERS=1-50
INSTANCE_2_USERS=51-100
INSTANCE_3_USERS=101-150
INSTANCE_4_USERS=151-200

# Resource Limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.0